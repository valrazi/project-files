        btn_done.addEventListener("click", function () {
            if (inputFileThree.files.length > 0) {
                const fileOne = inputFileOne.files[0]
                const fileTwo = inputFileTwo.files[0]
                const fileThree = inputFileThree.files[0]
                const formData = new FormData()
                formData.append("files", fileOne)

                formData.append("files", fileTwo)

                formData.append("files", fileThree)
                fetch("http://localhost:3000/admin/upload", {
